<div class="row">
    <body style="background-color: #cecfc5;">
    <div class="container">
        <div class="justify-content-center rounded">
            <div class="col col-lg-8 input-group mb-3 burger">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <h4>Enter Your Burger:</h4>
                        <input type="text" class="form-control form-control-lg" id="burger" name="burgerName">
                        </span>
                </div>
                
                <button id ="orderBurger" class="btn btn-outline-secondary" type="submit">Order Burger</button>
                <ul class = "burgerList" id="curOrder">
                    {{!-- Only when users enter the new burger --}}
                </ul>

                <h3 class="burgerList">Past Orders:</h3>
                <ul>
                    {{#each burgers}}
                    <li class="burgerList">
                        <h4>
                        {{burger}}
                        </h4>
                    </li>
                    {{/each}}
                </ul>
            </div>   
        </div>    
    </div>
</div>


