<div class="row">
    <body style="background-color: #cecfc5;">
    <div class="container">
        <div class="justify-content-center rounded">
            <div class="col col-lg-12 input-group mb-3 burger">
                <form class="newBurger">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <h4>Enter Your Burger:</h4>
                            <input type="text" class="form-control form-control-lg" id="burger" name="burgerName">
                            <button id ="orderBurger" class="btn btn-outline-secondary orderBtn" type="submit">Order Burger</button>
                            </span>
                    </div>
                
                </form>
                <div class="row">
                    <div class="col col-lg-8" id="curOrderHeader">
                        <ul class = "burgerList current" id="curOrder">
                            {{!-- Only when users enter the new burger --}}
                        </ul>
                    </div>

                    <div class="col col-lg-4">
                        <h3 class="burgerList">Past Orders:</h3>
                        <ul class="burgerList order" id="pastOrder">
                            {{#each burgers}}
                            <h4><li class="burgerList">
                                {{!-- <h4> --}}
                                {{burger}}
                                {{!-- </h4> --}}
                            </li></h4>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>   
        </div>    
    </div>
</div>


